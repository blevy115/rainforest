<h1>Product Info</h1>
<%= link_to("Edit", edit_product_path(@product)) %> |
<%= link_to("Delete", "/products/#{@product.id}", method: :delete, data: {confirm: "Are you sure you want to delete this product?"})%>

<br>
<h3><%= @product.name%></h3>
<p><%= @product.description %></p>
<%= @product.price_in_dollars %>
<br>

<h3><%@product.reviews.each_with_index do |r,i|%></h3>
Comment <%= i+1 %>: <%= r.comment %>
<br>
<% end %>

<h4>New Review</h4>

  <%= form_for([@product, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>


<br>
