<h1>Product Info</h1>
<%= link_to("Edit", edit_product_path(@product)) %> |
<%= link_to("Delete", "/products/#{@product.id}", method: :delete, data: {confirm: "Are you sure you want to delete this product?"})%>

<br>
<h3><%= @product.name%></h3>
<p><%= @product.description %></p>
<%= @product.price_in_dollars %>
<br>

<h3><%@product.reviews.each_with_index do |r,i|%></h3>
Comment <%= i+1 %>: <%= r.comment %> <%=r.created_at %><br><%= link_to("Edit", "/products/#{@product.id}/reviews/#{r.id}/edit") %> 
<br>
<% end %>

<h4>New Review</h4>

<%= render 'reviews/form', product: @product, review: @review %>

<br>
<%= link_to("Products Page", products_path) %>
